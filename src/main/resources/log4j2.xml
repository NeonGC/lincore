<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss} %level] %msg%n"/>
        </Console>
        <!--
        <Queue name="Terminal">
            <PatternLayout pattern="[%d{HH:mm:ss} %-5level] %msg%n"/>
        </Queue>
        -->
        <RollingFile name="File" fileName="logs/latest.log" filePattern="logs/%d{yyyy-MM-dd}-%i.log.gz" append="true">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss} %level] %marker [%logger:%L] %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
            <!--
            <AppenderRef ref="Terminal" level="info"/>
            -->
        </Root>
    </Loggers>
</Configuration>